{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "rootDir": "../",
        "outDir": "./build",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true, 
        "baseUrl": "./",
        "paths": {
            "utils/*": ["./src/utils/*"],

            "types/*": ["../types/*"],
            "data/*": ["../data/*"]
        }
    },
    "include": [ "./**/*.ts" ],
    "exclude": [ "node_modules", "build" ],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}